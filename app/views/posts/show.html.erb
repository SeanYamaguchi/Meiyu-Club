<p id="notice"><%= notice %></p>
<div class="post">
  <h3><%= @post.subject %> <small class="pull-right"><%= @post.date %></small></h3>
  <div class="row">
    <!-- 写真機能はここから -->
    <div class="col-md-7">
    <%= image_tag(@post.picture_url) if @post.picture.present? %>
    </div>
    <!-- 写真機能はここまでに！ -->
    <div class="col-md-5">
      <p><%= @post.body %></p>
      <h3>Comments</h3>
      <% @post.comments.each do |comment| %>
    <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
  </div>
  <% end %>
  <%= render 'comments/form' %>
  </div>
  </div>

<div class="clearfix">
<p class="pull-right">
<%= link_to '編集', edit_post_path(@post), :class => "btn btn-success" %>
<%= link_to '戻る', posts_path, :class => "btn btn-warning" %>
</p>
</div>

</div>
